{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "jsx": "preserve",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages",
    // playground
    "playground/main.ts",
    "playground/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}