{
  "name": "apple-ui",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "src",
    "dist",
    "!src/**/*.story.vue",
    "!src/**/*.test.*",
    "!src/**/_*.vue",
    "!src/**/__snapshots__",
    "!src/**/stories",
    "!src/**/story"
  ],
  "main": "./dist/apple-ui.cjs.js",
  "module": "./dist/apple-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/apple-ui.es.js",
      "require": "./dist/apple-ui.umd.js"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "vue-tsc -p tsconfig.app.json --noEmit"
  },
  "dependencies": {
    "tailwind-variants": "^1.0.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.0.14",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/language-core": "^3.0.1",
    "@vue/tsconfig": "^0.7.0",
    "jiti": "^2.4.2",
    "tailwindcss": "^4.1.1",
    "unplugin-dts": "1.0.0-beta.4",
    "vite": "^5.4.19",
    "vitest": "^3.0.8",
    "vue-tsc": "2.2.12"
  },
  "packageManager": "pnpm@10.4.1"
}